{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension with HMR",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--disable-extensions"
      ],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "preLaunchTask": "dev-hmr",
      "env": {
        "NODE_ENV": "development",
        "CRATER_HMR_ENABLED": "true"
      }
    }
  ]
}
