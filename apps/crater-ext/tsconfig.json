{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vscode", "node", "mocha"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "out",
    "**/*.config.js",
    "**/*.config.ts",
    "**/eslint.config.js",
    "**/esbuild.js"
  ],
  "ts-node": {
    "esm": true
  }
}
