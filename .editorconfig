# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# JavaScript/TypeScript files - 4 spaces (as requested)
[*.{js,mjs,cjs,ts,tsx,jsx}]
indent_size = 4

# JSON files - 2 spaces
[*.{json,jsonc}]
indent_size = 2

# YAML files - 2 spaces
[*.{yml,yaml}]
indent_size = 2

# Markdown files - 2 spaces
[*.md]
indent_size = 2

# Configuration files - 2 spaces
[*.{xml,html,css,scss,less,vue,svelte}]
indent_size = 2