{
    "tabWidth": 4,
    "useTabs": false,
    "endOfLine": "lf",
    "trailingComma": "es5",
    "singleQuote": true,
    "semi": false,
    "overrides": [
        {
            "files": ["*.json", "*.jsonc"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.{js,mjs,cjs,ts,tsx,jsx}"],
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": ["*.{yml,yaml}"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.md"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.{html,css,scss,less,vue,svelte}"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
