{
  "name": "@crater/core",
  "version": "0.0.1",
  "description": "Core shared logic and utilities for Crater applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest --watch"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "jsdom": "^22.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.0.0",
    "vitest": "^0.34.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
